<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <PawnKindDef ParentName="MercenaryBase">
    <defName>SCV_Pawn_Pirate</defName>
    <label>pirate engineering pilot</label>
    <combatPower>200</combatPower>
    <aiAvoidCover>true</aiAvoidCover>
    <isFighter>true</isFighter>
    <gearHealthRange>0.8~2</gearHealthRange>
    <apparelTags>
      <li>IndustrialMilitaryBasic</li>
    </apparelTags>
    <apparelMoney>800~1300</apparelMoney>
    <apparelAllowHeadgearChance>0.4</apparelAllowHeadgearChance>
    <weaponTags>
      <li>GunHeavy</li>
      <li>Minigun</li>
    </weaponTags>
    <weaponMoney>1500~3000</weaponMoney>
    <techHediffsChance>0.04</techHediffsChance>
    <techHediffsMoney>200~700</techHediffsMoney>
    <techHediffsTags>
      <li>Poor</li>
      <li>Simple</li>
      <li>ImplantEmpireCommon</li>
    </techHediffsTags>
    <initialWillRange>1~3</initialWillRange>
    <initialResistanceRange>15~24</initialResistanceRange>
    <modExtensions>
      <li Class="WalkerGear.ModExtForceApparelGen">
        <StructurePointRange>0.6~0.8</StructurePointRange>
        <apparels>
          <li>SCV_Core</li>
        </apparels>
        <chanceApparels>
        </chanceApparels>
        <colorGenerator Class="ColorGenerator_Options">
          <options>
            <li>
              <only>(135, 105, 105)</only>
            </li>
            <li>
              <only>(105, 77, 77)</only>
            </li>
            <li>
              <only>(77, 77, 77)</only>
            </li>
          </options>
        </colorGenerator>
      </li>
      <li Class="WalkerGear.ModExtension_NoIdeoApparel"/>  <!-- No Ideo Apparel replace apparel -->
    </modExtensions>
  </PawnKindDef>
</Defs>